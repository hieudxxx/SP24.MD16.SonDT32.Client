<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nest_scoll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Product.Fragment.ProductFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/custom_bgr_layout"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tb_product"
                style="@style/custom_toolbar"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    style="@style/custom_title_toolbar"
                    android:text="@string/text_product" />

                <ImageButton
                    android:id="@+id/filter"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="end"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/white"
                    android:padding="20dp"
                    android:src="@drawable/filter" />

                <ImageButton
                    android:id="@+id/fabFilter"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="end"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rouder_btn"
                    android:backgroundTint="@color/black"
                    android:padding="20dp"
                    android:src="@drawable/baseline_add_24" />

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end" />

            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:id="@+id/layoutSpn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone"
                android:weightSum="10">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:hint="Loại hóa đơn">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/spnInvoiceType"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:inputType="none" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="5"
                    android:hint="Trạng thái">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/spnPaymentStatus"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:inputType="none" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <View style="@style/custom_line" />

            <LinearLayout
                android:id="@+id/layout_total"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:padding="10dp">

                <TextView
                    style="@style/custom_tv_date_time"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Hàng hoá"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_total_product"
                    style="@style/custom_tv_date_time"
                    android:fontFamily="@font/nunito_extrabold"
                    android:text="4"
                    android:textColor="@color/tv_blue_bold" />

                <LinearLayout
                    style="@style/custom_llInvoice"
                    android:layout_width="match_parent"
                    android:layout_marginTop="0dp"
                    android:gravity="end">

                    <Button
                        android:id="@+id/fab"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Thêm" />

                </LinearLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="823dp"
                android:layout_weight="1">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_product"
                    style="@style/custom_rcv"
                    android:visibility="visible"
                    tools:listitem="@layout/item_product" />

                <ProgressBar
                    android:id="@+id/pbLoadMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rcv_product" />

                <ProgressBar
                    android:id="@+id/pbLoading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_empty"
                    style="@style/custom_tv_title"
                    android:text="Bạn chưa có hàng hóa nào"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </FrameLayout>

</androidx.core.widget.NestedScrollView>