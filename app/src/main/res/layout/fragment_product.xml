<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nest_scoll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Product.Fragment.ProductFragment">

    <!--    <androidx.constraintlayout.widget.ConstraintLayout style="@style/custom_bgr_layout">-->

    <LinearLayout
        style="@style/custom_bgr_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_product"
            style="@style/custom_toolbar">

            <TextView
                style="@style/custom_title_toolbar"
                android:text="@string/text_product" />
        </androidx.appcompat.widget.Toolbar>

        <View style="@style/custom_line" />

        <LinearLayout
            android:id="@+id/layout_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:visibility="gone">

            <TextView
                style="@style/custom_tv_date_time"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/text_product"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_total_product"
                style="@style/custom_tv_date_time"
                android:fontFamily="@font/nunito_extrabold"
                android:padding="0dp"
                android:textColor="@color/tv_blue_bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="-"
                android:textSize="25sp" />

            <TextView
                style="@style/custom_tv_date_time"
                android:fontFamily="@font/nunito_bold"
                android:padding="0dp"
                android:text="Tồn kho"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_inventory"
                style="@style/custom_tv_date_time"
                android:fontFamily="@font/nunito_extrabold"
                android:text="10000"
                android:textColor="@color/red" />

            <TextView
                style="@style/custom_tv_date_time"
                android:fontFamily="@font/nunito_bold"
                android:text="Giá bán"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrow_down" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_product"
                style="@style/custom_rcv"
                tools:listitem="@layout/item_product" />

            <ProgressBar
                android:id="@+id/pbLoadMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rcv_product" />

            <ProgressBar
                android:id="@+id/pbLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_empty"
                style="@style/custom_tv_title"
                android:text="Bạn chưa có hàng hóa nào"
                android:visibility="gone" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/fab"
                style="@style/custom_fab"
                app:icon="@drawable/add" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/pb_loadmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>


    <!--    </androidx.constraintlayout.widget.ConstraintLayout>-->


</androidx.core.widget.NestedScrollView>