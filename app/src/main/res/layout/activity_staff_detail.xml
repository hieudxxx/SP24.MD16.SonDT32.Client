<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    style="@style/custom_bgr_layout"
    android:layout_height="match_parent"
    tools:context=".Staff.Activity.StaffDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_staff_detail"
        style="@style/custom_toolbar"
        android:layout_height="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_back"
            style="@style/custom_img_back_toolbar"
            android:importantForAccessibility="no" />

        <TextView
            style="@style/custom_title_toolbar"
            android:text="Chi tiết nhân viên" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgr_btn_menu"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:layout_below="@id/tb_staff_detail"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        android:paddingTop="15dp">

        <androidx.cardview.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="60dp">

            <ImageView
                android:id="@+id/img_avt"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar" />
        </androidx.cardview.widget.CardView>

        <LinearLayout style="@style/custom_tv_supplier">



            <TextView
                style="@style/custom_tv_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Mã NV" />

            <TextView
                android:id="@+id/tv_id"
                style="@style/custom_tv_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="NV004" />
        </LinearLayout>

        <View style="@style/custom_line" />

        <LinearLayout style="@style/custom_tv_supplier">

            <TextView
                style="@style/custom_tv_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Tên NV" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/custom_tv_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="NTH" />
        </LinearLayout>

        <View style="@style/custom_line" />

        <LinearLayout style="@style/custom_tv_supplier">

            <TextView
                style="@style/custom_tv_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Điện thoại" />

            <TextView
                android:id="@+id/tv_phone"
                style="@style/custom_tv_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="0973967774" />


        </LinearLayout>

        <View style="@style/custom_line" />

        <LinearLayout style="@style/custom_tv_supplier">

            <TextView
                style="@style/custom_tv_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Email" />

            <TextView
                android:id="@+id/tv_email"
                style="@style/custom_tv_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="" />


        </LinearLayout>

        <View style="@style/custom_line" />

        <LinearLayout style="@style/custom_tv_supplier">

            <TextView
                style="@style/custom_tv_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Chức vụ" />

            <TextView
                android:id="@+id/tv_role"
                style="@style/custom_tv_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="" />


        </LinearLayout>

        <View
            style="@style/custom_line"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/custom_tv_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Ghi chú" />

            <TextView
                android:id="@+id/tv_note"
                style="@style/custom_tv_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <View
            style="@style/custom_line"
            android:layout_marginBottom="20dp" />

    </LinearLayout>
</RelativeLayout>