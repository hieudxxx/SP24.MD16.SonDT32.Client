<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Product.Fragment.ProductDeleteFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_product"
        style="@style/custom_toolbar">

        <ImageView
            android:id="@+id/img_back"
            style="@style/custom_img_back_toolbar" />

        <TextView
            android:id="@+id/tv_id_pr"
            style="@style/custom_title_toolbar"
            android:text="Xóa sản phẩm theo lô" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_empty"
            style="@style/custom_tv_title"
            android:text="Sản phẩm chưa có lô hàng nào"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv"
            style="@style/custom_rcv"
            android:layout_marginTop="5dp"
            tools:listitem="@layout/item_product_batch" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>