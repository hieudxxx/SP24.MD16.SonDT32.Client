<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/nest_scoll"
    android:layout_height="match_parent"
    tools:context=".Category.CategoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        style="@style/custom_bgr_layout">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_category"
            style="@style/custom_toolbar">

            <ImageView
                android:id="@+id/img_back"
                style="@style/custom_img_back_toolbar" />

            <TextView
                style="@style/custom_title_toolbar"
                android:text="Khách hàng" />
        </androidx.appcompat.widget.Toolbar>

        <View style="@style/custom_line" />
        <LinearLayout
            android:id="@+id/layout_total"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:padding="10dp">

            <TextView
                style="@style/custom_tv_date_time"
                android:fontFamily="@font/nunito_bold"
                android:text="khách hàng"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_total_invoice"
                style="@style/custom_tv_date_time"
                android:fontFamily="@font/nunito_extrabold"
                android:text="4"
                android:textColor="@color/tv_blue_bold" />

            <LinearLayout
                style="@style/custom_llInvoice"
                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:gravity="end">


                <Button
                    android:id="@+id/fab"
                    android:layout_height="40dp"
                    android:layout_width="wrap_content"
                    android:text="Thêm"/>

            </LinearLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="823dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_category"
                style="@style/custom_rcv"
                android:layout_marginHorizontal="5dp"
                tools:listitem="@layout/item_category"
                tools:ignore="MissingConstraints" />

            <ProgressBar
                android:id="@+id/pbLoadMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rcv_category" />

            <ProgressBar
                android:id="@+id/pbLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_empty"
                style="@style/custom_tv_title"
                android:text="Bạn chưa có loại hàng hóa nào"
                android:visibility="gone"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>