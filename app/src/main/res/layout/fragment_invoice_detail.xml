<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgr_screen"
    tools:context=".Invoice.Fragment.InvoiceDetailFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_invoice"
        style="@style/custom_toolbar">

        <ImageView
            android:id="@+id/img_back"
            style="@style/custom_img_back_toolbar"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_id_invoice_detail"
                style="@style/custom_title_toolbar"
                android:text="P3124" />

            <TextView
                android:id="@+id/tv_status_invoice"
                style="@style/custom_tvChkLogin"
                android:paddingBottom="5dp"
                android:text="@string/text_complete"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_edit_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/edit_invoice" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tb_invoice"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/supplier" />

                    <TextView
                        style="@style/custom_tv_date_time"
                        android:text="Công ty cổ phần thời trang Mantis" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        style="@style/custom_tv_date_time"
                        android:text="Đỗ Xuân Hiếu" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view"
                style="@style/custom_line"
                android:layout_below="@+id/tb_invoice" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/custom_tv_date_time"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Sản phẩm: " />

                    <TextView
                        style="@style/custom_tv_number"
                        android:layout_marginStart="3dp"
                        android:text="6" />
                </LinearLayout>

                <TextView
                    style="@style/custom_tv_number"
                    android:layout_gravity="center_vertical"
                    android:text="21/02/2024 01:42"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cv"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_invoice_detail" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/custom_tv_total"
                android:layout_weight="7"
                android:text="@string/text_total_money" />

            <TextView
                android:id="@+id/tvTotal"
                style="@style/custom_tv_total"
                android:layout_weight="3"
                android:gravity="right"
                android:text="157.000"
                android:textColor="@color/red" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>