<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Product.Fragment.ProductEditFragment">

    <LinearLayout style="@style/custom_bgr_layout">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_product"
            style="@style/custom_toolbar">

            <ImageView
                android:id="@+id/img_back"
                style="@style/custom_img_back_toolbar" />

            <TextView
                style="@style/custom_title_toolbar"
                android:text="Sửa sản phẩm" />

            <TextView
                android:id="@+id/tv_save"
                style="@style/custom_tv_title"
                android:layout_gravity="end"
                android:layout_marginRight="20dp"
                android:text="Lưu"
                android:textColor="@color/tv_blue_bold" />
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout style="@style/custom_layout_supplier">

            <LinearLayout style="@style/custom_tv_supplier">

                <EditText
                    android:id="@+id/edt_name"
                    style="@style/custom_title_product_detail"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:hint="Nhập tên sản phẩm" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_product"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    android:src="@drawable/img_add"
                    app:shapeAppearanceOverlay="@style/custom_shape_img"
                    app:strokeColor="@color/bgr_screen"
                    app:strokeWidth="2dp" />
            </LinearLayout>

            <View
                style="@style/custom_line"
                android:layout_marginTop="10dp" />

            <LinearLayout style="@style/custom_tv_supplier">

                <TextView
                    style="@style/custom_tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Mã hàng:" />

                <EditText
                    android:id="@+id/edt_id"
                    style="@style/custom_title_product_detail"
                    android:layout_weight="2"
                    android:backgroundTint="@color/white" />
            </LinearLayout>

            <View
                style="@style/custom_line"
                android:layout_marginLeft="110dp" />

            <LinearLayout style="@style/custom_tv_supplier">

                <TextView
                    style="@style/custom_tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Loại hàng:" />

                <TextView
                    android:id="@id/tv_category"
                    style="@style/custom_tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    app:drawableRightCompat="@drawable/next_forgot_bold" />
            </LinearLayout>

            <View
                style="@style/custom_line"
                android:layout_marginLeft="110dp" />

            <LinearLayout style="@style/custom_tv_supplier">

                <TextView
                    style="@style/custom_tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Nhà cung \ncấp:" />

                <TextView
                    android:id="@+id/tv_supplier"
                    style="@style/custom_tv_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    app:drawableRightCompat="@drawable/next_forgot_bold" />
            </LinearLayout>

            <View
                style="@style/custom_line"
                android:layout_marginLeft="110dp" />

            <LinearLayout style="@style/custom_tv_supplier">

                <TextView
                    style="@style/custom_tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Giá bán:" />

                <EditText
                    android:id="@+id/edt_export_price"
                    style="@style/custom_title_product_detail"
                    android:layout_weight="2"
                    android:backgroundTint="@color/white" />
            </LinearLayout>

            <View
                style="@style/custom_line"
                android:layout_marginLeft="110dp" />

            <LinearLayout style="@style/custom_tv_supplier">

                <TextView
                    style="@style/custom_tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Giá vốn:" />

                <EditText
                    android:id="@+id/edt_import_price"
                    style="@style/custom_title_product_detail"
                    android:layout_weight="2"
                    android:backgroundTint="@color/white" />
            </LinearLayout>

            <View
                style="@style/custom_line"
                android:layout_marginLeft="110dp" />

            <LinearLayout style="@style/custom_tv_supplier">

                <TextView
                    style="@style/custom_tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Tồn kho:" />

                <EditText
                    android:id="@+id/edt_inventory"
                    style="@style/custom_title_product_detail"
                    android:layout_weight="2"
                    android:backgroundTint="@color/white" />
            </LinearLayout>

            <View
                style="@style/custom_line"
                android:layout_marginLeft="110dp" />

            <LinearLayout
                style="@style/custom_tv_supplier"
                android:paddingVertical="0dp"
                android:paddingTop="10dp">

                <TextView
                    style="@style/custom_tv_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Đơn vị \nđo lường: " />

                <EditText
                    android:id="@+id/edt_weight"
                    style="@style/custom_title_product_detail"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:backgroundTint="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/custom_tv_title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Ghi chú" />

        <EditText
            style="@style/custom_title_product_detail"
            android:layout_width="match_parent"
            android:height="50dp"
            android:background="@color/white" />

        <EditText
            style="@style/custom_title_product_detail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/add_properties"
            android:gravity="center_vertical"
            android:hint="thêm thuộc tính" />
    </LinearLayout>
</ScrollView>