<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Product.Fragment.ProductDetailFragment">

    <LinearLayout style="@style/custom_bgr_layout">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_product"
            style="@style/custom_toolbar">

            <ImageView
                android:id="@+id/img_back"
                style="@style/custom_img_back_toolbar" />

            <TextView
                android:id="@+id/tv_id_product"
                style="@style/custom_title_toolbar"
                android:text="SP21423" />

            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="20dp"
                android:src="@drawable/edit_invoice" />
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout style="@style/custom_layout_supplier">

            <LinearLayout style="@style/custom_tv_supplier">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/custom_title_product_detail"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:text="tên sản phẩm" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_product"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    android:src="@drawable/img_add"
                    app:shapeAppearanceOverlay="@style/custom_shape_img"
                    app:strokeColor="@color/bgr_screen"
                    app:strokeWidth="2dp" />
            </LinearLayout>

            <View
                style="@style/custom_line"
                android:layout_marginTop="10dp" />

            <LinearLayout style="@style/custom_tv_supplier">

                <TextView
                    style="@style/custom_tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Mã hàng:" />

                <TextView
                    android:id="@+id/tv_barCode"
                    style="@style/custom_tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="2" />
            </LinearLayout>

            <View
                style="@style/custom_line"
                android:layout_marginLeft="110dp" />

            <LinearLayout style="@style/custom_tv_supplier">

                <TextView
                    style="@style/custom_tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Loại hàng:" />

                <TextView
                    android:id="@+id/tv_category"
                    style="@style/custom_tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="2" />
            </LinearLayout>

            <View
                style="@style/custom_line"
                android:layout_marginLeft="110dp" />

            <LinearLayout style="@style/custom_tv_supplier">

                <TextView
                    style="@style/custom_tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Nhà cung \ncấp:" />

                <TextView
                    android:id="@+id/tv_supplier"
                    style="@style/custom_tv_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:clickable="false"
                    android:contextClickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    app:drawableRightCompat="@drawable/next_forgot_bold" />
            </LinearLayout>

            <View
                style="@style/custom_line"
                android:layout_marginLeft="110dp" />

            <LinearLayout style="@style/custom_tv_supplier">

                <TextView
                    style="@style/custom_tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Giá bán:" />

                <TextView
                    android:id="@+id/tv_export_price"
                    style="@style/custom_tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="2" />
            </LinearLayout>

            <View
                style="@style/custom_line"
                android:layout_marginLeft="110dp" />

            <LinearLayout style="@style/custom_tv_supplier">

                <TextView
                    style="@style/custom_tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Giá vốn:" />

                <TextView
                    android:id="@+id/tv_import_price"
                    style="@style/custom_tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="2" />
            </LinearLayout>

            <View
                style="@style/custom_line"
                android:layout_marginLeft="110dp" />

            <LinearLayout style="@style/custom_tv_supplier">

                <TextView
                    style="@style/custom_tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Tồn kho:" />

                <TextView
                    android:id="@+id/tv_inventory"
                    style="@style/custom_tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="2" />
            </LinearLayout>

            <View
                style="@style/custom_line"
                android:layout_marginLeft="110dp" />

            <LinearLayout style="@style/custom_tv_supplier">

                <TextView
                    style="@style/custom_tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Đơn vị \nđo lường: " />

                <TextView
                    android:id="@+id/tv_unit"
                    style="@style/custom_tv_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />
            </LinearLayout>

            <View
                style="@style/custom_line"
                android:layout_marginLeft="110dp"
                android:layout_marginBottom="20dp" />

            <LinearLayout style="@style/custom_tv_supplier">

                <TextView
                    style="@style/custom_tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Vị trí: " />

                <TextView
                    android:id="@+id/tv_location"
                    style="@style/custom_tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="2" />
            </LinearLayout>

            <View
                style="@style/custom_line"
                android:layout_marginLeft="110dp"
                android:layout_marginBottom="20dp" />
        </LinearLayout>

        <TextView
            style="@style/custom_tv_title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Ảnh" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <TextView
            style="@style/custom_tv_title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Ghi chú" />

        <TextView
            style="@style/custom_tv_title"
            android:layout_width="match_parent"
            android:height="50dp"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/layout_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/delete" />

            <TextView
                style="@style/custom_title_product_detail"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Xóa"
                android:textColor="@color/red" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/next_32" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>