<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/custom_bgr_layout"
    tools:context=".Invoice.Fragment.InvoiceImportFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_invoice"
            style="@style/custom_toolbar"
            android:background="@color/white">

            <ImageView
                android:id="@+id/img_back"
                style="@style/custom_img_back_toolbar" />

            <TextView
                style="@style/custom_title_toolbar"
                android:text="Nhập hàng" />
        </androidx.appcompat.widget.Toolbar>

        <View
            android:id="@+id/view"
            style="@style/custom_line"
            android:layout_below="@+id/tb_invoice" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/linearLayout"
                style="@style/custom_llInvoice">

                <TextView
                    style="@style/custom_tv_date_time"
                    android:fontFamily="@font/nunito_bold"
                    android:text="@string/text_invoice"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvTotalInvoice"
                    style="@style/custom_tv_date_time"
                    android:fontFamily="@font/nunito_extrabold"
                    android:text="50"
                    android:textColor="@color/tv_blue_bold" />
            </LinearLayout>

            <LinearLayout
                style="@style/custom_llInvoice"
                android:layout_width="match_parent"
                android:gravity="end">

                <TextView
                    style="@style/custom_tv_date_time"
                    android:fontFamily="@font/nunito_bold"
                    android:text="@string/text_sum"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvTotalPrice"
                    style="@style/custom_tv_date_time"
                    android:fontFamily="@font/nunito_extrabold"
                    android:text="1.000.000"
                    android:textColor="@color/tv_blue_bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/calendar" />

            <TextView
                android:id="@+id/tv_date"
                style="@style/custom_tv_date_time"
                android:text="Hôm nay, 5/3/2024" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:src="@drawable/arrow_down_bold" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_invoice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@drawable/bgr_bot_sheet"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_invoice" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add"
        style="@style/custom_fab"
        android:src="@drawable/add"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>