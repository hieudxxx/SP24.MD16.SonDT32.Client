<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="5dp"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical"
        android:paddingRight="5dp">


        <TextView
            android:id="@+id/tv_name"
            style="@style/custom_tv_product_name"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@string/bottom_sheet_behavior" />

        <LinearLayout
            android:id="@+id/layoutImportPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="10">

            <TextView
                style="@style/custom_tv_product_sold"
                android:layout_weight="0.5"
                android:maxLines="2"
                android:text="Giá nhập:"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvImportPrice"
                style="@style/custom_tv_product_sold"
                android:layout_weight="9.5"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="1000000"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutExportPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="10">

            <TextView
                style="@style/custom_tv_product_sold"
                android:layout_weight="0.5"
                android:maxLines="2"
                android:text="Giá bán:"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvExportPrice"
                style="@style/custom_tv_product_sold"
                android:layout_weight="9.5"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="5000000"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="10">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="8"
                android:hint="Ngày hết hạn"
                app:startIconDrawable="@drawable/baseline_date_range_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ed_expiry_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_marginLeft="5dp"
                style="@style/custom_tv_product_sold"
                android:layout_weight="0.5"
                android:maxLines="2"
                android:text="Tồn kho:" />

            <TextView
                android:id="@+id/tvInventory"
                android:layout_weight="1.5"
                style="@style/custom_tv_product_name"
                android:ellipsize="end"
                android:text="1000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="10">

            <LinearLayout
                android:id="@+id/btn_minus"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:gravity="center">

                <ImageButton
                    android:layout_width="10dp"
                    android:layout_height="3dp"
                    android:src="@drawable/minus" />

            </LinearLayout>

            <EditText
                android:id="@+id/ed_quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:inputType="number"
                android:text="1" />

            <LinearLayout
                android:id="@+id/btn_plus"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:gravity="center">

                <ImageButton
                    android:layout_width="12dp"
                    android:layout_height="11dp"
                    android:src="@drawable/plus" />

            </LinearLayout>

            <TextView
                android:layout_marginLeft="10dp"
                style="@style/custom_tv_product_sold"
                android:layout_weight="0.5"
                android:maxLines="2"
                android:text="Tổng tiền:" />

            <TextView
                android:id="@+id/tvTotalAmount"
                android:layout_weight="4.5"
                style="@style/custom_tv_product_name"
                android:ellipsize="end"
                android:text="1000000" />

        </LinearLayout>

    </LinearLayout>


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:src="@drawable/app_icon"
        app:shapeAppearanceOverlay="@style/custom_shape_img"
        app:strokeColor="@color/bgr_screen"
        app:strokeWidth="2dp" />


</LinearLayout>