<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/custom_bgr_edt"
    android:backgroundTint="@color/white"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_id_invoice"
            style="@style/custom_tv_date_time"
            android:fontFamily="@font/nunito_extrabold"
            android:text="HD001"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_type_invoice"
            style="@style/custom_tv_date_time"
            android:fontFamily="@font/nunito_extrabold"
            android:text="Hóa đơn nhập"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="textEnd"
            android:id="@+id/tv_date_created"
            style="@style/custom_tv_date_time"
            android:fontFamily="@font/nunito_extrabold"
            android:text="01/01/2023"
            android:textColor="@color/gray60" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/abc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="4"
            android:layout_width="0dp"
            android:id="@+id/tv_status_invoice"
            style="@style/custom_tv_date_time"
            android:fontFamily="@font/nunito_extrabold"
            android:text="Chưa thanh toán"
            android:textColor="@color/gray60" />


        <TextView
            android:layout_weight="6"
            android:layout_width="0dp"
            android:textAlignment="textEnd"
            android:id="@+id/tv_total_invoice"
            style="@style/custom_tv_date_time"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/nunito_extrabold"
            android:text="2.000.000"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>