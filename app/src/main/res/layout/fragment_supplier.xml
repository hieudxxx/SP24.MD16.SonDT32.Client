<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/custom_bgr_layout"
    tools:context=".Supplier.Fragment.SupplierFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_supplier"
        style="@style/custom_toolbar">

        <ImageView
            android:id="@+id/img_back"
            style="@style/custom_img_back_toolbar" />

        <TextView
            style="@style/custom_title_toolbar"
            android:text="@string/text_suppplier" />
    </androidx.appcompat.widget.Toolbar>

    <View style="@style/custom_line" />

    <LinearLayout
        android:id="@+id/layout_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            style="@style/custom_tv_date_time"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/text_suppplier"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_total_invoice"
            style="@style/custom_tv_date_time"
            android:fontFamily="@font/nunito_extrabold"
            android:text="4"
            android:textColor="@color/tv_blue_bold" />

        <LinearLayout
            style="@style/custom_llInvoice"
            android:layout_width="match_parent"
            android:gravity="end">

            <TextView
                style="@style/custom_tv_date_time"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/text_sum"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_total_money"
                style="@style/custom_tv_date_time"
                android:layout_marginStart="3dp"
                android:fontFamily="@font/nunito_extrabold"
                android:text="1.000.000"
                android:textColor="@color/tv_blue_bold" />
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_invoice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:background="@drawable/bgr_bot_sheet"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_supplier" />

        <TextView
            android:id="@+id/tv_empty"
            style="@style/custom_tv_title"
            android:text="Bạn chưa có nhà cung cấp nào"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab"
            style="@style/custom_fab"
            app:icon="@drawable/add"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>