<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgr_screen"
    tools:context=".Product.ProductFilterActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbProductFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:src="@drawable/back" />

                <TextView
                    style="@style/custom_title_toolbar"
                    android:text="@string/text_total_money_filter" />
            </LinearLayout>

            <TextView
                android:id="@+id/imageViewMoreBillDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/text_apply"
                android:textColor="@color/tv_blue_bold"
                android:textSize="16sp" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbProductFilter">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="Lọc hàng hoá"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_product_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:background="@color/white" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rcv_product_category"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="Tồn kho"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    style="@style/custom_llProductFilter"
                    android:layout_alignParentTop="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/custom_tvProductFilter"
                            android:text="Tất cả" />

                        <ImageView
                            style="@style/custom_imgVProductFilter"
                            android:src="@drawable/done" />
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/linearLayout2"
                    android:background="@color/bgr_screen" />

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    style="@style/custom_llProductFilter"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_marginTop="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/custom_tvProductFilter"
                            android:text="Vượt định mức tồn" />

                        <ImageView
                            style="@style/custom_imgVProductFilter"
                            android:src="@drawable/done" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/linearLayout3"
                    android:background="@color/bgr_screen" />

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    style="@style/custom_llProductFilter"
                    android:layout_below="@+id/linearLayout3"
                    android:layout_marginTop="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/custom_tvProductFilter"
                            android:text="Dưới định mức tồn" />

                        <ImageView
                            style="@style/custom_imgVProductFilter"
                            android:src="@drawable/done" />
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/linearLayout4"
                    android:background="@color/bgr_screen" />

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    style="@style/custom_llProductFilter"
                    android:layout_below="@+id/linearLayout4"
                    android:layout_marginTop="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/custom_tvProductFilter"
                            android:text="Còn hàng trong kho" />

                        <ImageView
                            style="@style/custom_imgVProductFilter"
                            android:src="@drawable/done" />
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/linearLayout5"
                    android:background="@color/bgr_screen" />

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    style="@style/custom_llProductFilter"
                    android:layout_below="@+id/linearLayout5"
                    android:layout_marginTop="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/custom_tvProductFilter"
                            android:text="Hết hàng trong kho" />

                        <ImageView
                            style="@style/custom_imgVProductFilter"
                            android:src="@drawable/done" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>