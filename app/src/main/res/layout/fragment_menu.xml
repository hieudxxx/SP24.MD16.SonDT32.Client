<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/custom_bgr_layout"
    android:fillViewport="true"
    tools:context=".Menu.Fragment.MenuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_menu"
            style="@style/custom_toolbar">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginVertical="5dp"
                app:cardCornerRadius="60dp">

                <ImageView
                    android:id="@+id/img_avt"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txt_nameAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/nunito_extrabold"
                android:text="Xuân Hiếu"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/imgBtn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:backgroundTint="@color/white"
                android:src="@drawable/edit_user" />
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_invoice"
                style="@style/custom_bgr_btn_menu"
                android:drawableStart="@drawable/invoice_bot_nav"
                android:text="Hoá đơn" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_censor"
                style="@style/custom_bgr_btn_menu"
                android:drawableStart="@drawable/about_us"
                android:text="Kiểm duyệt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_supplier"
                style="@style/custom_bgr_btn_menu"
                android:drawableStart="@drawable/supplier"
                android:text="Nhà cung cấp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_staff"
                style="@style/custom_bgr_btn_menu"
                android:drawableStart="@drawable/staff"
                android:text="Nhân viên" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_categories"
                style="@style/custom_bgr_btn_menu"
                android:drawableStart="@drawable/category"
                android:text="Loại hàng" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_product"
                style="@style/custom_bgr_btn_menu"
                android:drawableStart="@drawable/product_bot_nav"
                android:text="Hàng hoá" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_statistic"
                style="@style/custom_bgr_btn_menu"
                android:drawableStart="@drawable/statistic_bot_nav"
                android:text="Tồng quan" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_treasuryBook"
                style="@style/custom_bgr_btn_menu"
                android:drawableStart="@drawable/ledger"
                android:text="Sổ quỹ" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bgr_bot_sheet"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_info"
                style="@style/custom_bgr_btn2_menu"
                android:drawableStart="@drawable/in4_shop"
                android:text="Thông tin gian hàng" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_policy"
                style="@style/custom_bgr_btn2_menu"
                android:drawableStart="@drawable/policy"
                android:text="Chính sách bảo mật" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_about"
                style="@style/custom_bgr_btn2_menu"
                android:drawableStart="@drawable/about_us"
                android:text="Về chúng tôi" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_report"
                style="@style/custom_bgr_btn2_menu"
                android:drawableStart="@drawable/report"
                android:text="Báo lỗi" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_feedback"
                style="@style/custom_bgr_btn2_menu"
                android:drawableStart="@drawable/help"
                android:text="Trợ giúp và phản hồi" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_setting"
                style="@style/custom_bgr_btn2_menu"
                android:drawableStart="@drawable/settings"
                android:text="Cài đặt" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_call"
                style="@style/custom_bgr_btn2_menu"
                android:drawableStart="@drawable/call"
                android:text="Gọi tổng đài" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_clause"
                style="@style/custom_bgr_btn2_menu"
                android:drawableStart="@drawable/rules"
                android:text="Điều khoản" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_logout"
                style="@style/custom_bgr_btn2_menu"
                android:drawableStart="@drawable/logout"
                android:text="Đăng xuất" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
