<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:theme="@style/Base.Theme.DeportLife">


    <RelativeLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/img_avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/avt"
                    app:shapeAppearanceOverlay="@style/custom_shape_img_circle"
                    app:strokeWidth="2dp" />

                <LinearLayout
                    android:id="@+id/layout"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/img_avatar"
                    android:layout_width="match_parent"
                    android:layout_toStartOf="@+id/switch_compat"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunito_semibold"
                        android:textSize="16sp"
                        android:id="@+id/tvName"
                        android:text="Nguyễn Văn Sang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunito_semibold"
                        android:textSize="16sp"
                        android:id="@+id/tvPhone"
                        android:text="0961984330"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunito_semibold"
                        android:textSize="16sp"
                        android:id="@+id/tvEmail"
                        android:text="abc@gmail.com"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch_compat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOff="Chặn"
                        android:textOn="Bỏ chặn"
                        app:showText="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:thumb="@drawable/switch_thumb"
                        app:thumbTint="@color/white"
                        app:trackTint="@color/bgr_screen"
                        app:track="@drawable/switch_track"
                        />
    </RelativeLayout>





