<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="9"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/tv_inventory"
                style="@style/custom_tv_product_sold"
                android:text="Tồn kho: 50" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/custom_tv_product_name"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="Tên" />

            <TextView
                android:id="@+id/tv_barcode"
                style="@style/custom_tv_product_sold"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Mã: " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                app:shapeAppearanceOverlay="@style/custom_shape_img"
                app:strokeColor="@color/bgr_screen"
                app:strokeWidth="2dp" />

            <TextView
                android:id="@+id/tv_import_price"
                style="@style/custom_tv_date_time"
                android:padding="0dp"
                android:textColor="@color/red"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_export_price"
                style="@style/custom_tv_date_time"
                android:padding="0dp"
                android:textColor="@color/tv_blue_bold"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/custom_line"
        android:layout_marginTop="5dp" />
</LinearLayout>