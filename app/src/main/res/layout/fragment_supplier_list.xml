<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/custom_bgr_layout"
    android:background="@color/white"
    tools:context=".Invoice.Fragment.SupplierListFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_invoice"
        style="@style/custom_toolbar"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_back"
            style="@style/custom_img_back_toolbar" />

        <TextView
            android:id="@+id/tv_toolbar"
            style="@style/custom_title_toolbar"
            android:text="Chọn nhà cung cấp" />

        <ImageView
            android:id="@+id/img_add_supplier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:src="@drawable/baseline_add_24" />
    </androidx.appcompat.widget.Toolbar>

    <SearchView
        android:id="@+id/sv_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/custom_bgr_edt"
        android:queryHint="Chọn hàng nhập" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/custom_bgr_layout"
        android:paddingTop="20dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_add_invoice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_supplier" />
    </LinearLayout>
</LinearLayout>