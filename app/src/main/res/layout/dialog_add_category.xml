<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgr_dialog_notification"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            style="@style/custom_tv_title_dialog_success"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:text="Thêm loại hàng hoá" />

        <ImageButton
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/white"
            android:contentDescription="null"
            android:src="@drawable/close" />


        <LinearLayout
            android:id="@+id/linearLayout"
            style="@style/custom_llLogin"
            android:layout_below="@+id/textView"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/custom_tv_title_edt"
                android:text="Tên loại hàng hoá" />

            <EditText
                android:id="@+id/edt_add_category"
                style="@style/custom_bgr_edt"
                android:hint="Ví dụ: Mỹ phẩm"
                android:inputType="text"
                android:maxLength="30" />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_war_name"
            style="@style/custom_tv_warning" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_cateogry"
            style="@style/custom_btn"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="120dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:text="Thêm" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>